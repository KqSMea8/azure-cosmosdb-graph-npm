extends layout
block content

  div.container-fluid
    table(align="center", width="100%", border='0')
      tr(style="vertical-align:top")
        td
          a(href='/')
            img(src='../img/montage.png', height='80px')

  div.container-fluid
    table(align="center", width="100%", border='0')
      tr
        td(align="left", width="30%")
        td(align="center")
          h3 Library View
        td(align="right", width="30%")
          p

  hr 

  div.container-fluid
    table(align="center", width="60%", border='0')
      tr(style="vertical-align:top")
        th
          p(align="left", width="20%") Attribute
        th
          p(align="left") Value
      tr(style="vertical-align:top")
        td(align="left", width="20%")
          p Name:
        td(align="left")
          a(href='/lib/show_bom/' + name)= name
      tr(style="vertical-align:top")
        td(align="left", width="20%")
          p Description:
        td(align="left")
          p= desc
      tr(style="vertical-align:top")
        td(align="left", width="15%")
          p Keywords:
        td(align="left")
          p= keywords.join(' ')
      tr(style="vertical-align:top")
        td(align="left", width="15%")
          p Author:
        td(align="left")
          p= author
      tr(style="vertical-align:top")
        td(align="left", width="15%")
          p NPM page:
        td(align="left")
          a(href='https://www.npmjs.com/package/' + name)= name
      tr(style="vertical-align:top")
        td(align="left", width="15%")
          p Homepage:
        td(align="left")
          a(href='' + homepage)= homepage
      tr(style="vertical-align:top")
        td(align="left", width="15%")
          p Current Version:
        td(align="left")
          p= version

  hr

  div.container-fluid
    table(align="left", width="90%", border='0')
      tr(style="vertical-align:top")
        td(width="50%")
          h4(align="right") Maintainers
          table(align="right", width="90%", border='0')
            each maintainer in maintainers
              tr(style="vertical-align:top")
                td(align="right")
                  a(href='/maint/' + maintainer.split(' ')[0])= maintainer

        td(width="5%")
          p 
        td(width="45%")
          h4(align="left") Dependencies
          table(align="left", width="90%", border='0')
            each val, index in dependencies
              tr(style="vertical-align:top")
                td(align="left")
                  a(href='/lib/' + index)= index

  script(src='../js/library_view.js')
  