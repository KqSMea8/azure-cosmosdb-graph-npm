extends layout
block content

  div.container-fluid
    table(align="center", width="100%", border='0')
      tr
        td(align="left", width="30%")
        td(align="center")
          h3 Library View
        td(align="right", width="30%")
          nav.nav(align="right")
            a.nav-link(href="/") Home
            a.nav-link(href="/bom") BOM

  hr 

  div.container-fluid
    h4(align="center") General Info
    table(align="center", width="60%", border='0')
      tr
        th
          p(align="left", width="20%") Attribute
        th
          p(align="left") Value
      tr
        td(align="left", width="20%")
          p Name:
        td(align="left")
          p(href='/lib/show_bom/' + name)= name
      tr
        td(align="left", width="20%")
          p Description:
        td(align="left")
          p= desc
      tr
        td(align="left", width="15%")
          p Keywords:
        td(align="left")
          p= keywords.join(' ')
      tr
        td(align="left", width="15%")
          p Author:
        td(align="left")
          p= author
      tr
        td(align="left", width="15%")
          p Homepage:
        td(align="left")
          a(href='' + homepage)= homepage
      tr
        td(align="left", width="15%")
          p Current Version:
        td(align="left")
          p= version

  hr

  div.container-fluid
    table(align="center", width="80%", border='1')
      tr
        td
          h4(align="center") Maintainers
          table(align="center", width="30%", border='0')
            each maintainer in maintainers
              tr
                td(align="center")
                  a(href='/maint/' + maintainer.split(' ')[0])= maintainer
        td
          p 
        td
          h4(align="center") Maintainers
          table(align="center", width="30%", border='0')
            each maintainer in maintainers
              tr
                td(align="center")
                  a(href='/maint/' + maintainer.split(' ')[0])= maintainer

  script(src='../js/library_view.js')
  